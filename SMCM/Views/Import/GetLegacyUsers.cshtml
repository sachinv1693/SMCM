@using SmartMeterConsumerManagement.Enums; 
@model SmartMeterConsumerManagement.Models.ImportDataModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Get Legacy Users";
}

<hr />

<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-action="GetLegacyUsers" method="post" role="form" class="form-horizontal">
                @Html.AntiForgeryToken()
                <h4>Please Select an import option</h4>
                <hr />

                <div class="form-group">
                    @Html.LabelFor(model => model.ImportDataType, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*ViewBag.ImportTypes is holding all the import type values*@
                        @Html.DropDownListFor(model => model.ImportDataType, ViewBag.ImportTypes as SelectList, new { @class = "form-control", @importType = Model })
                        @Html.ValidationMessageFor(model => model.ImportDataType, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button class="btn btn-primary">Next</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

<div>
    @Html.ActionLink("Back", "Index", "Home")
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}